doctype html
html(lang='fr')
  head
    style
      include style.css
  body
    #todo.container
      p#title Add todo

        #todo.content
          form(action='/todos', method='POST')
            label#text(for='name') Right the task to do :
            input(type='text', name='message')

            br

            label#text(for='name') For which user is this todo :
            select(name='userId', size='1')
              option 1
              option 2
              option 3
              option 5
              option 6
              option 7
              option 8
              option 9
              option 10

            br

            label#text(for='completion') This todo is :
            select(name='completion', size='1')

              option to do
              option in progress
              option done
            br

            #submit.button
              input#greenBut(type='submit', value='Submit !')

          #comeBack.button
            form(action='/todos', method='GET')
              input#backBut(type='submit', value='Come back')
