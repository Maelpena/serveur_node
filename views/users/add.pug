doctype html
html(lang='fr')
  head
    style
      include style.css
  body
    #user.container
      p#title Add user

        #user.content
          form(action='/users', method='POST')
            label#text(for='name') Firstname :
            input(type='text', name='firstname')
            br

            label#text(for='name') Lastname :
            input(type='text', name='lastname')
            br

            label#text(for='name') Username :
            input(type='text', name='username')
            br

            label#text(for='name') Password :
            input(type='password', name='password')
            br

            label#text(for='name') Email :
            input(type='text', name='email')
            br

            #submit.button
              input#greenBut(type='submit', value='Submit !')

            #comeBack.button
              form(action='javascript:history.back()', method='GET')
                input#backBut(type='submit', value='Come back')
